<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5ECEF"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:src="@drawable/back"
        app:tint="#03A9F4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/back"
        android:orientation="vertical"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:src="@drawable/user"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/backArrow"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="-30dp"
            app:srcCompat="@drawable/update" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alexandria_medium"
                android:padding="5dp"
                android:text="UserName:" />

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/alexandria_medium"
                android:hint="Your Name"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alexandria_medium"
                android:padding="5dp"
                android:text="About:" />

            <EditText
                android:id="@+id/etStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:ems="10"
                android:fontFamily="@font/alexandria_medium"
                android:hint="Your About"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/alexandria_medium"
            android:padding="5dp"
            android:text="Save"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/linearlayoutbackground"
            android:orientation="vertical">

            <TextView
                android:id="@+id/privacypolicy"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/privacy"
                android:fontFamily="@font/alexandria_medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="Privacy Policy"
                android:textColor="#DED7D7"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/aboutus"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/aboutus"
                android:fontFamily="@font/alexandria_medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="About Us"
                android:textColor="#DED7D7"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/terms"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/terms"
                android:fontFamily="@font/alexandria_medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="Terms And Conditions"
                android:textColor="#DED7D7"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>