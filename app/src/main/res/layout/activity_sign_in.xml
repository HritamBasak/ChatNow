<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/signupbackground"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            app:srcCompat="@drawable/signup" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/anek_bangla_semibold"
            android:padding="5dp"
            android:text="SIgn In"
            android:textColor="#D1C6C6"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/anek_bangla_semibold"
            android:padding="5dp"
            android:text="Please enter the required information to sign in to ChatNow"
            android:textColor="#D1C6C6"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_Google"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#E9E1E1"
        android:drawableLeft="@drawable/google"
        android:foregroundGravity="center"
        android:padding="10dp"
        android:text="Sign In with Google"
        android:textColor="#1B1313" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <View
            android:id="@+id/view"
            android:layout_width="5dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/signupbackground" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="25sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/anek_bangla_semibold"
            android:gravity="center"
            android:text="or Sign in with Email"
            android:textSize="12sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="5dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/signupbackground" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/anek_bangla_semibold"
        android:padding="5dp"
        android:text="Email" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/emailtextbackground"
        android:ems="10"
        android:fontFamily="@font/anek_bangla_semibold"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="5dp" />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/emailtextbackground"
        android:ems="10"
        android:fontFamily="@font/anek_bangla_semibold"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="5dp" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#2196F3"
        android:fontFamily="@font/anek_bangla_semibold"
        android:padding="5dp"
        android:text="Sign In" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">


        <TextView
            android:id="@+id/tvClickSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anek_bangla_semibold"
            android:text="Click for Sign Up" />

    </LinearLayout>
</LinearLayout>